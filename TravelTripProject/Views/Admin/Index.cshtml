@using TravelTripProject.Models.Classes
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr style="text-align:center">
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>TARİH</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach(var x in Model) 
    {
    <tr style="text-align:center">
        <td>@x.ID</td>
        <td>@x.Baslik</td>
        <td>@x.Tarih.ToString("dd.MM.yyyy")</td>
        <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
        <td><a href="#" class="btn btn-info">Detaylar</a></td>
    </tr> 
    }
</table>
<a href="/Admin/YeniBlog/" class="btn btn-warning">Yeni Blog</a>

